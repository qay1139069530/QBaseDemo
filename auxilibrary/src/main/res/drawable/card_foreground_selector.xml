<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/alpha_primary" android:startColor="@color/alpha_primary" />
            <corners android:radius="@dimen/card_radius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/alpha_primary" android:startColor="@color/alpha_primary" />
            <corners android:radius="@dimen/card_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/alpha_all" android:startColor="@color/alpha_all" />
            <corners android:radius="@dimen/card_radius" />
        </shape>
    </item>
</selector>