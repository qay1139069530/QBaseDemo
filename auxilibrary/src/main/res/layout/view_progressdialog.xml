<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pb"
    android:padding="30dp"
    android:gravity="center"
    android:orientation="horizontal">

    <com.qbase.auxilibrary.view.process.ProgressView
        android:id="@+id/view_progressdialog_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:v_styleId="@array/pv_circular_in_colors" />


    <TextView
        android:id="@+id/view_progressdialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:textSize="16sp" />

</LinearLayout>
